<%= simple_form_for [:admin, @job] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category, :collection => ["藝術創作", "圖文插畫", "攝影", "文學",  "音樂", "舞蹈", "戲劇/電影/舞台/劇場", "工業/產品", "視覺", "時尚", "數位媒體",  "建築/室內", "都市/景觀"], :selected => "developer" %>
    <%= f.input :wage_lower_bound, :label => "Lower Salary" %>
    <%= f.input :wage_upper_bound, :label => "Upper Salary" %>
    <%= f.input :company %>
    <%= f.input :contact_email %>
    <%= f.input :city %>
    <%= f.input :address, :label => "工作地址" %>
    <%= f.input :is_hidden %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
