<div class="container loginsignup-img
">

<div class="container-fluid">
  <div class="col-lg-3 col-centered">

    <legend>登入 <span class="logo">AnDjob</span></legend>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, :label => "Email", placeholder: "請輸入Email", type: "email", value: "", name: "user[email]", id: "user_email", input_html: { class: "string email optional form-control"}%>
          <%= f.input :password, required: false, :label => "密碼",placeholder: "請輸入密碼", type: "password", name: "user[password]", id: "user_password", input_html: { class: "form-group password optional user_password"}%>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, type: "submit", name: "commit", value: "登入", input_html: { class: "btn btn-primary btn btn-devise btn-block"} %>
        </div>
      <% end %>

      <br />
        尚未擁有帳戶？<a href="/users/sign_up"><span class="text-primary">點此註冊</span></a>
      <br />
      <!-- <span><a href="/users/password/new">忘記密碼？</a> -->


  </div>
</div>
</div>
