<div class="row">
  <div class="col-sm-9 col-lg-8 col-lg-offset-3">
    <%= form_tag search_jobs_path , :method => :get, :class => "jobs-search-form" do %>
      <div class="input-group">
        <input type="text" class="form-control search-bar-input" name="q" value="<%= params[:q] %>" placeholder="job, company, city...">
        <span class="input-group-btn">
          <button type="submit" class="btn btn-primary">
            <span class="fa fa-search"></span>
          </button>
        </span>
      </div>
    <% end %>
  </div>
</div>
