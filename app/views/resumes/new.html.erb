<div class="col-md-6 col-centered">
<h3>投交履歷到 <%= @job.title %></h3>

<hr>
<%= simple_form_for [@job, @resume] do |f| %>
  <%= f.input :content, required: true, autofocus: true, label: "附加內容" %>
  <br />
  <%= f.input :attachment, required: true, autofocus: true, label: "上傳履歷檔案(PDF檔)"  %>
  <br />
  <%= f.submit "送出", class: "btn btn-primary" %>

<% end %>
</div>
